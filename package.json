{
  "name": "project-progress-tracker",
  "version": "1.0.0",
  "description": "A project progress tracking app with Node.js API and React frontend",
  "main": "api/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon api/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node api/index.js",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}